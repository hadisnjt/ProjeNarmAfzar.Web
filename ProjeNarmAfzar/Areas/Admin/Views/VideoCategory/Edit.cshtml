@model ProjeNarmAfzar.Domain.ViewModels.VideoCategory.EditVideoCategoryViewModel
@{
    ViewData["Title"] = "ویرایش دسته بندی";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />  
}

<div class="col-lg-12">
    <div class="widget">
        <div class="widget-header bordered-bottom bordered-blue">
            <span class="widget-caption">@ViewData["Title"]</span>
        </div>
        <div class="widget-body">
            <div>
                <form asp-area="Admin" asp-controller="VideoCategory" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">عنوان</label>
                                <input class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputPassword1">عنوان در url</label>
                                <input class="form-control" asp-for="TitleInUrl">
                                <span class="text-danger" asp-validation-for="TitleInUrl"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success">ویرایش دسته بندی</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
